<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity">


    <RadioGroup
        android:id="@+id/foodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/phoHaNoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phở Hà Nội" />

        <RadioButton
            android:id="@+id/bunBoHue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bún Bò Huế" />

        <RadioButton
            android:id="@+id/miQuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mì Quảng" />

        <RadioButton
            android:id="@+id/huTiuSaiGon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủ Tíu Sài Gòn" />
    </RadioGroup>

    <Button
        android:id="@+id/datMonBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="352dp"
        android:text="Đặt món"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>