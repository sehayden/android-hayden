<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoApplication">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="7dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/signInForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Sign in Form"
            android:textColor="#FA858585"
            android:textStyle="bold" />

        <EditText
            android:layout_below="@id/signInForm"
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:textSize="15dp"
            android:hint="Username"
            android:inputType="text" />
        <EditText
            android:id="@+id/password"
            android:layout_below="@id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:hint="Password"
            android:inputType="text" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/password"
            android:id="@+id/notAccYet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Not account yet? Create one"
            android:textColor="#FA858585"
            android:textStyle="bold" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/notAccYet"
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="-----------Or-----------"
            android:textColor="#FA858585" />
        <Button
            android:layout_below="@id/or"
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#d7d8d8"
            android:textColor="@color/black"
            android:text="Sign in"
            android:textAllCaps="true"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>